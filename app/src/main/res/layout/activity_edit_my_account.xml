<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMyAccount">
    <LinearLayout
        android:id="@+id/name_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/name_on_my_account" />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/email_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/name_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="0.7"
            android:text="@string/email_on_my_account" />

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1.3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/email_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:text="@string/phone_on_my_account" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_weight="1.3"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/street_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/phone_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:text="@string/street_on_my_account" />

        <EditText
            android:id="@+id/street_address"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/apt_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/street_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:text="@string/apt_on_my_account" />

        <EditText
            android:id="@+id/apt_number"
            android:textSize="18sp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/city_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/apt_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="0.7"
            android:text="@string/city_on_my_account" />

        <EditText
            android:id="@+id/city"
            android:layout_weight="1.3"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zip_on_my_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/city_on_my_account"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:text="@string/zip_on_my_account" />

        <EditText
            android:id="@+id/zip_code"
            android:layout_weight="1.3"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/save_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zip_on_my_account"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>