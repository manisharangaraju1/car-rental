<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentMethods">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_number_label"
            android:text="@string/card_number"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:textSize="17sp"
            android:gravity="left|center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_payment"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:gravity="left|center"
                android:textColor="@color/location"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="30dp"
                android:inputType="number"
                android:background="@drawable/border"
                android:layout_height="60dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exp_date_label"
                android:text="@string/exp_date"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/cvv_label"
                android:text="@string/cvv"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="30dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/date_selector"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:background="@drawable/border"
                android:focusable="false"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:text="@string/default_date"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/cvv"
                android:layout_width="70dp"
                android:textSize="17sp"
                android:gravity="left|center"
                android:textColor="@color/location"
                android:padding="10dp"
                android:inputType="number"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_height="60dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/zip_code_label"
            android:text="@string/zip_code"
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_height="60dp" />
        <EditText
            android:id="@+id/zip_code"
            android:layout_width="match_parent"
            android:textSize="17sp"
            android:inputType="number"
            android:gravity="left|center"
            android:textColor="@color/location"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/save_card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/save"
            android:background="@color/colorPrimary"
            android:textSize="17sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>